{
	"name": "@grammyjs/stateless-question",
	"version": "3.0.1",
	"description": "Create stateless questions to Telegram users working in privacy mode",
	"keywords": [
		"grammy",
		"stateless",
		"question",
		"reply",
		"privacy",
		"mode",
		"message"
	],
	"license": "MIT",
	"repository": "grammyjs/stateless-question",
	"author": {
		"name": "EdJoPaTo",
		"email": "stateless-question-telegram-typescript@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"@grammyjs/types": "^2.2.6",
		"telegram-format": "^2.0.0"
	},
	"peerDependencies": {
		"grammy": "^1.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/node": "^12.20.19",
		"ava": "^4.0.1",
		"del-cli": "^4.0.0",
		"grammy": "^1.2.0",
		"nyc": "^15.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.47.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "dist/source",
	"types": "dist/source",
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"xo": {
		"semicolon": false,
		"rules": {
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"ava/no-ignored-test-files": "off",
			"import/extensions": [
				"error",
				"never"
			]
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/no-unsafe-assignment": "off",
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
